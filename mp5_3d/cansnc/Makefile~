#FC = ftn -O2 -Minline
FC = ftn -fastsse -Mipa=fast -O2 -Minline -Minfo=all
#FC = ifort -parallel -inline
#FC = gfortran
CANS_LIB_DIR = ..

TARGET = $(CANS_LIB_DIR)/libcansnc.a
OBJS =  ncopn1d.o ncopn2d.o ncopn3d.o \
        ncgetattc.o ncputattc.o \
	ncdefss.o ncputss.o ncgetss.o \
	ncdefssi.o ncputssi.o ncgetssi.o \
	ncdefs1.o ncputs1.o ncgets1.o \
	ncdefs2.o ncputs2.o ncgets2.o \
	ncdefs3.o ncputs3.o ncgets3.o \
	ncputosc.o ncgetosc.o ncputosi.o ncgetosi.o ncputos.o ncgetos.o \
	ncputo1.o ncgeto1.o ncputo2.o ncgeto2.o ncputo3.o ncgeto3.o \
	dacdefparam.o dacdef0s.o dacdef1d.o dacdef1s.o \
	dacputparami.o dacputparamc.o dacputparamr.o dacputparamd.o \
	dacopnr1d.o dacopnr0s.o dacopnr1s.o dacopnr2s.o dacopnr3s.o \
	dacdef2d.o dacdef2s.o dacdef3d.o dacdef3s.o \
	dacgetparamd.o dacgetparamr.o dacgetparami.o dacgetparamc.o

'.update' : $(OBJS)
	ar -r $(TARGET) $(OBJS)
	touch .update
clean :
	rm -f $(OBJS)  ../libcansnc.a
cleanall :
	make clean
